<!-- ===== Header / Navegación ===== -->
<header
    class="bg-opacity-80 backdrop-blur-md sticky top-0 z-50"
    style="background-color: rgba(10, 10, 14, 0.8);"
>
    <!-- Navbar -->
    <nav
        class="fixed w-full z-50 top-0 transition-all duration-300"
        id="navbar"
    >
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex items-center justify-between h-20">
                <div
                    class="flex-shrink-0 cursor-pointer"
                    onclick="window.scrollTo(0,0)"
                >
                    <span class="text-2xl font-bold tracking-tighter"
                        >TANDIL <span class="text-cyan-400">SOLUTION</span></span
                    >
                </div>
                <div class="hidden md:block">
                    <div class="ml-10 flex items-baseline space-x-8">
                        <a
                            href="#servicios"
                            class="hover:text-cyan-400 px-3 py-2 rounded-md text-sm font-medium transition-colors"
                            >Servicios</a
                        >
                        <a
                            href="#contacto"
                            class="bg-white text-black hover:bg-cyan-400 hover:text-black px-5 py-2 rounded-full text-sm font-bold transition-all transform hover:scale-105"
                            >Iniciar Proyecto</a
                        >
                    </div>
                </div>
                <!-- Mobile menu button -->
                <div class="md:hidden">
                    <button
                        class="text-white hover:text-cyan-400 focus:outline-none"
                    >
                        <i class="fas fa-bars text-2xl"></i>
                    </button>
                </div>
            </div>
        </div>
    </nav>
</header>

